<% layout("/layout/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
        <h2>Create new form</h2>
        <form  method="post" action="/listings" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
             <input  name="listing[title] " placeholder="add a catchy title" type="text" class="form-control" required/>
             <div class="valid-feedback">It Look Good !</div>
            </div>
    
           <div class="mb-3">
            <label for="description" class="form-label" >Descriptin</label>
            <textarea name="listing[description]" class="form-control"required> 
          </textarea>
          <div class="invalid-feedback">Please fill Valid Descriptin !</div>
           </div>
            
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name ="listing[image]" placeholder="enter image URL/link" type="text" class="form-control">
            </div>
           <div class="row">
            <div class="mb-3  col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input 
                 name="listing[price]"
                 placeholder="1200"
                 class="form-control"
                  required/>
                  <div class="invalid-feedback">Please Enter valid  Number !</div>
            </div>
           
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Lucknow " type="text" class="form-control"required/>
                <div class="invalid-feedback">location Name Should be Valid !</div>
            </div>
         
            
           <div class=" mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India " type="text"class="form-control" required/>
            <div class="invalid-feedback">Country Name should be Valid !</div>
           </div>
           
       <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
    </div>
   

